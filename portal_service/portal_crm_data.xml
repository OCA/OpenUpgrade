		<field name="group_id" ref="portal_service_group"/>
		<field name="model_id" search="[('model','=','crm.case.categ')]"/>
		<field name="perm_read" eval="True"/>
	</record>
	<record model="ir.model.access" id="model_access_case_category_user">
